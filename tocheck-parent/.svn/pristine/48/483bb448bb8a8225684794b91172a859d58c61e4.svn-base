var paperFileExtReg = /.doc|.docx|.txt/;
var layer;
var form;
layui.use(['layer', 'form'], function () {
    layer = layui.layer, form = layui.form();
});
function trim(val) {
    return $.trim(val)
}
function loading() {
    var index = layer.load(1, {
        shade: [0.1, '#a2a2a2'], //0.1透明度的白色背景
        time: 0,
        offset: ['50%', '50%']
    });
    return index;
}
$(function () {
    if ($("#needLogin").val()) {
        alert(1);
        return false;
    }
})
function validateLogin(url) {
    $.ajax({
        url: "/validateLogin.html",
        method: "post",
        success: function (state) {
            if (state) {
                location.href = url;
            } else {
                alert(1);
            }
        }, error: function () {
            location.href = "/";
        }
    })
}
function login() {
    var qqConnectUrl = $("#qqConnectUrl").val();
    var weiXinConnectUrl = $("#weiXinConnectUrl").val();
    layer.open({
        title: false,
        type: 1,
        area: '600px',
        closeBtn: 0,
        content: '<div class="login-box login-d">' +
        '<div class="btn-x"></div>' +
        '<div class="logon-logo"><img src="/resources/images/logos.png" alt="" title=""> </div> ' +
        '<fieldset class="layui-elem-field layui-field-title"> <legend>首次登录即注册</legend> </fieldset>' +
        '<a href="' + qqConnectUrl + '" target="_blank" class="login-a login-qq"> <span></span> <i>QQ登录</i> </a> ' +
        '<a href="' + weiXinConnectUrl + '" target="_blank" class="login-a login-wx"> <span></span> <i>微信登录</i> </a> </div>',
        success: function (layero, index) {
            $('.btn-x').click(function () {
                layer.close(index)
            })
        }
    })
}
