package com.tocheck.parent.core.service.impl;

import com.github.pagehelper.PageHelper;
import com.github.pagehelper.PageInfo;
import com.tocheck.parent.common.constans.Constants;
import com.tocheck.parent.core.dao.IWithdrawRecordDao;
import com.tocheck.parent.core.entity.WithdrawRecord;
import com.tocheck.parent.core.service.WithdrawRecordService;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import java.util.HashMap;
import java.util.List;
import java.util.Map;

/**
 * @author pangliang
 * @create 2017-06-14 16:03
 **/
@Service
public class WithdrawRecordServiceImpl implements WithdrawRecordService {

    @Autowired
    private IWithdrawRecordDao withdrawRecordDao;

    @Override
    public PageInfo<WithdrawRecord> listPage(Integer p, long agentId) {
        PageHelper.startPage(p, Constants.PAGE_LIMIT);
        Map<String, Object> param = new HashMap<>();
        param.put("agentId", agentId);
        List<WithdrawRecord> list = withdrawRecordDao.getByMap(param);
        return new PageInfo<>(list);
    }
}
