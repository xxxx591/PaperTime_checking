package com.tocheck.parent.core.service.impl;

import com.tocheck.parent.core.dao.IWebUserDao;
import com.tocheck.parent.core.entity.WebUser;
import com.tocheck.parent.core.service.WebUserService;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import java.math.BigDecimal;
import java.util.HashMap;
import java.util.List;
import java.util.Map;

/**
 * @author pangliang
 * @create 2017-06-14 10:02
 **/
@Service
public class WebUserServiceImpl implements WebUserService {

    @Autowired
    private IWebUserDao webUserDao;

    @Override
    public WebUser getById(long id) {
        return webUserDao.getById(id);
    }

    @Override
    public void updateRechargeCount(long id, String totalFee) {
        WebUser user = webUserDao.getById(id);
        if (user == null) return;
        Map<String, Object> param = new HashMap<>();
        param.put("id", id);
        param.put("recharge", user.getRecharge().add(new BigDecimal(totalFee)));
        webUserDao.updateByMap(param);
    }

    @Override
    public WebUser getByLoginType(String openId, int loginType) {
        Map<String, Object> param = new HashMap<>();
        param.put("openId", openId);
        param.put("loginType", loginType);
        List<WebUser> user = webUserDao.getByMap(param);
        if (!user.isEmpty()) {
            return user.get(0);
        }
        return null;
    }

    @Override
    public void createWebUser(WebUser user) {
        webUserDao.insert(user);
    }

    @Override
    public WebUser getByUserName(String userName) {
        Map<String, Object> param = new HashMap<>();
        param.put("userName", userName);
        List<WebUser> user = webUserDao.getByMap(param);
        if (!user.isEmpty()) {
            return user.get(0);
        }
        return null;
    }
}
