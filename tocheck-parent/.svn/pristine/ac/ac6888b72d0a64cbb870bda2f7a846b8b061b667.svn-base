<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tocheck.parent.core.dao.IToCheckThirdPartyOrderDao">
    <resultMap id="BaseResultMap" type="com.tocheck.parent.core.entity.ToCheckThirdPartyOrder">
        <id column="id" property="id" jdbcType="BIGINT" javaType="long"/>
        <result column="mobile" property="mobile" jdbcType="VARCHAR" javaType="String"/>
        <result column="orderNum" property="orderNum" jdbcType="VARCHAR" javaType="String"/>
        <result column="tradeNum" property="tradeNum" jdbcType="VARCHAR" javaType="String"/>
        <result column="amount" property="amount" jdbcType="DECIMAL" javaType="java.math.BigDecimal"/>
        <result column="status" property="status" jdbcType="INTEGER" javaType="int"/>
        <result column="createTime" property="createTime" />
        <result column="payTime" property="payTime" />
        <result column="checkId" property="checkId" jdbcType="BIGINT" javaType="long"/>
        <result column="deleteStatus" property="deleteStatus" jdbcType="INTEGER" javaType="int"/>
    </resultMap>

    <sql id="Base_Column_List">
        t1.id,t1.mobile,t1.orderNum,t1.tradeNum,t1.amount,t1.status,t1.createTime,t1.checkId,t1.deleteStatus
    </sql>

    <select id="getById" parameterType="long" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        from toCheckThirdPartyOrder t1 where t1.deleteStatus != 0 and t1.id=#{id}
    </select>

    <select id="getByMap" parameterType="Map" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        from toCheckThirdPartyOrder t1 where t1.deleteStatus != 0
        <if test="orderNum!=null">
            and t1.orderNum=#{orderNum}
        </if>
        <if test="tradeNum!=null">
            and t1.tradeNum=#{tradeNum}
        </if>
        <if test="mobile!=null">
            and t1.mobile=#{mobile}
        </if>
        <if test="status!=null">
            and t1.status=#{status}
        </if>
        ORDER BY t1.id DESC
    </select>

    <insert id="insert" parameterType="com.tocheck.parent.core.entity.ToCheckThirdPartyOrder" useGeneratedKeys="true" keyProperty="id">
        insert into toCheckThirdPartyOrder(mobile,orderNum,amount,status) values
        (#{mobile},#{orderNum},#{amount},#{status})
    </insert>

    <update id="updateByMap" parameterType="Map">
        update toCheckThirdPartyOrder
        <set>
            <if test="orderNum!=null">
                orderNum=#{orderNum},
            </if>
            <if test="tradeNum!=null">
                tradeNum=#{tradeNum},
            </if>
            <if test="status!=null">
                status=#{status},
            </if>
            <if test="amount!=null">
                amount=#{amount},
            </if>
            <if test="payTime!=null">
                payTime=#{payTime},
            </if>
            <if test="checkId!=null">
                checkId=#{checkId},
            </if>
        </set>
        where id = #{id}
    </update>

    <update id="logicDelete" parameterType="Long">
        update toCheckThirdPartyOrder set deleteStatus = 0 where id=#{id}
    </update>

</mapper>