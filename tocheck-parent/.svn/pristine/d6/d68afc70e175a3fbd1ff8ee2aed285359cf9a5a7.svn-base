function showActivityDetail(id) {
    var index = loading();
    $.ajax({
        url: '/coupon/activityDetails.html?id='+id,
        type: 'GET',
        cache: false,
        success: function (detailContent) {
            layer.close(index);
            layer.open({
                type: 1,
                title: false,
                fix: false,
                closeBtn: 1,
                shadeClose: true,
                area: 'auto',
                content: detailContent
            });
        },
        error:function (e) {
            if(e.status=='403'){
                window.location.href="/webUser/login.html";
            }
            layer.close(index);
        }
    });
}
