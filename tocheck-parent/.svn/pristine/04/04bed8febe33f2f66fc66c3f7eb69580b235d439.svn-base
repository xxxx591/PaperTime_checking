<!doctype html>
<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<html>
<head>
    <title>我的优惠券</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="${pageContext.request.contextPath}/resources/layui/css/layui.css">
    <link rel="stylesheet" href="${pageContext.request.contextPath}/resources/css/style.css">
</head>
<body>
<!----header----->
<div class="header-sub header-ckbg">
    <a class="logo-sub"><img src="/resources/images/logo.png" alt="" title=""></a>
    <div class="head-nav">
        <a href="${pageContext.request.contextPath}/submitTask/1.html" class="head-a ">提交论文</a>
        <a href="${pageContext.request.contextPath}/viewReport/index.html" class="head-a ">查看报告</a>
        <a href="${pageContext.request.contextPath}/coupon/get.html" class="head-a head-as">获取优惠券</a>
    </div>
</div>
<!--获取优惠券-个人信息-->
<div class="yhq-grxx">
    <div class="yhq-grxx-d">
        <div class="grxx-item">
            <div class="grxx-img">
                <img src="/resources/images/tx.jpg" alt=""  title="">
            </div>
            <span>您好，${webUser.userName}</span>
        </div>
        <div class="grxx-item">
            <span>
                注册类型：
                 <c:if test="${webUser.loginType==1}">
                     QQ注册
                 </c:if>
                 <c:if test="${webUser.loginType==2}">
                     微信注册
                 </c:if>
            </span>
        </div>
        <div class="grxx-item">
            <span>注册时间：<fmt:formatDate value="${webUser.createTime}" pattern="yyyy-MM-dd"/></span>
        </div>
    </div>
</div>
<!-----主体内容----->
<div class="yhq-bd">
    <div class="yhq-nav">
        <a class="yhq-nav-a " href="/coupon/get.html">获取优惠券</a>
        <a class="yhq-nav-a yhq-nav-as" href="/coupon/my.html">我的优惠券</a>
    </div>
    <div class="yhq-nr">
        <ul class="yhq-nr-ul yhq-nr-ul-my">
          <c:forEach items="${list}" var="r">
            <li>
                <div class="yhq-my <c:if test="${r.status==0}">yhq-mys</c:if>">
                    <div class="layui-form-label">
                        <strong>${r.title}</strong>
                        <p>无门槛使用</p>
                    </div>
                    <div class="layui-input-block">
                        <strong>${r.cash}</strong>
                        <span>元</span>
                    </div>
                    <c:if test="${r.status==0}">
                        <div class="record record-ycj"></div>
                    </c:if>
                </div>
            </li>
          </c:forEach>
        </ul>
    </div>
</div>
<!-----footer---->
<jsp:include page="../submitTask/footer.jsp"/>
<script src="/resources/layui/lay/dest/layui.all.js"></script>
</body>
</html>
