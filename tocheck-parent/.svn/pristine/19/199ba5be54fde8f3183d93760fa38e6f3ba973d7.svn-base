<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tocheck.parent.core.dao.ISystemTopicDao">
    <resultMap id="BaseResultMap" type="com.tocheck.parent.core.entity.SystemTopic">
        <id column="id" property="id" jdbcType="BIGINT" javaType="long"/>
        <result column="title" property="title" jdbcType="VARCHAR" javaType="String"/>
        <result column="content" property="content" jdbcType="VARCHAR" javaType="String"/>
        <result column="createTime" property="createTime"></result>
        <result column="itemImageUrl" property="itemImageUrl" jdbcType="VARCHAR" javaType="String"/>
        <result column="deleteStatus" property="deleteStatus" jdbcType="INTEGER" javaType="int"/>
    </resultMap>

    <sql id="Base_Column_List">
        t1.id,t1.title,t1.content,t1.createTime,t1.itemImageUrl,t1.deleteStatus
    </sql>

    <select id="topRecommended" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        from systemTopic t1 where t1.deleteStatus != 0 and t1.itemImageUrl IS NOT NULL AND itemImageUrl !=''
        ORDER BY t1.id DESC limit 10
    </select>

    <select id="getById" parameterType="long" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        from systemTopic t1 where t1.deleteStatus != 0 and t1.id=#{id}
    </select>

    <select id="getByMap" parameterType="Map" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        from systemTopic t1 where t1.deleteStatus != 0 and (t1.itemImageUrl IS NULL OR itemImageUrl ='')
        ORDER BY t1.id DESC
    </select>

</mapper>