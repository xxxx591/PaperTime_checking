var paperFileExtReg = /.doc|.docx|.txt/;
var layer;
var form;
layui.use(['layer', 'form'], function(){
    layer = layui.layer,form = layui.form();
});
function trim(val) {
    return $.trim(val)
}
function loading() {
    var index = layer.load(1, {
        shade: [0.1, '#a2a2a2'], //0.1透明度的白色背景
        time: 0,
        offset: ['50%', '50%']
    });
    return index;
}
$(function () {
    if ($("#needLogin").val()) {
        alert(1);
        return false;
    }
})

function validateLogin(url) {
    $.ajax({
        url: "/validateLogin.html",
        method: "post",
        success: function (state) {
            if (state) {
                location.href = url;
            } else {
                alert(1);
            }
        }, error: function () {
            location.href = "/";
        }
    })
}
