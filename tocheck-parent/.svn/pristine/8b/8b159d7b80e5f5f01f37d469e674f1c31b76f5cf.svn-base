<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tocheck.parent.core.dao.IToCheckTaoBaoOrderDao">
    <resultMap id="BaseResultMap" type="com.tocheck.parent.core.entity.ToCheckTaoBaoOrder">
        <id column="id" property="id" jdbcType="BIGINT" javaType="long"/>
        <result column="buyerNick" property="buyerNick" jdbcType="VARCHAR" javaType="String"/>
        <result column="num" property="num" jdbcType="INTEGER" javaType="int"/>
        <result column="payment" property="payment" jdbcType="DECIMAL" javaType="java.math.BigDecimal"></result>
        <result column="numIid" property="numIid" jdbcType="BIGINT" javaType="long"/>
        <result column="sellerNick" property="sellerNick" jdbcType="VARCHAR" javaType="String"/>
        <result column="status" property="status" jdbcType="VARCHAR" javaType="String"/>
        <result column="isUse" property="isUse" jdbcType="INTEGER" javaType="int"/>
        <result column="tid" property="tid" jdbcType="BIGINT" javaType="long"/>
        <result column="createTime" property="createTime"/>
        <result column="checkId" property="checkId" jdbcType="BIGINT" javaType="long"/>
        <result column="deleteStatus" property="deleteStatus" jdbcType="INTEGER" javaType="int"/>
    </resultMap>

    <sql id="Base_Column_List">
        t1.id,t1.buyerNick,t1.num,t1.payment,t1.numIid,t1.sellerNick,t1.status,t1.isUse,t1.tid,t1.createTime,t1.checkId,t1.deleteStatus
    </sql>

    <select id="getById" parameterType="long" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        from toCheckTaoBaoOrder t1 where t1.deleteStatus != 0 and t1.id=#{id}
    </select>

    <select id="getByTid" parameterType="long" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        from toCheckTaoBaoOrder t1 where t1.deleteStatus != 0 and t1.tid=#{tid}
    </select>

    <select id="getByMap" parameterType="Map" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        from toCheckTaoBaoOrder t1 where t1.deleteStatus != 0
        ORDER BY t1.id DESC
    </select>

    <insert id="insert" parameterType="com.tocheck.parent.core.entity.ToCheckTaoBaoOrder" useGeneratedKeys="true" keyProperty="id">
        insert into toCheckTaoBaoOrder(buyerNick,num,payment,numIid,sellerNick,status,isUse,tid,checkId) values
        (#{buyerNick},#{num},#{payment},#{numIid},#{sellerNick},#{status},#{isUse},#{tid},#{checkId})
    </insert>

    <update id="updateByMap" parameterType="Map">
        update toCheckTaoBaoOrder
        <set>
            <if test="isUse!=null">
                isUse=#{isUse},
            </if>
            <if test="checkId!=null">
                checkId=#{checkId},
            </if>
        </set>
        where id = #{id}
    </update>

    <update id="logicDelete" parameterType="Long">
        update toCheckTaoBaoOrder set deleteStatus = 0 where id=#{id}
    </update>

</mapper>