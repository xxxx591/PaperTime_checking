<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tocheck.parent.core.dao.IFreeActivityDao">
    <resultMap id="BaseResultMap" type="com.tocheck.parent.core.entity.FreeActivity">
        <id column="id" property="id" jdbcType="BIGINT" javaType="long"/>
        <result column="systemId" property="systemId" jdbcType="BIGINT" javaType="long"/>
        <result column="cash" property="cash" />
        <result column="title" property="title" jdbcType="VARCHAR" javaType="String"/>
        <result column="content" property="content" jdbcType="VARCHAR" javaType="String"/>
        <result column="note" property="note" jdbcType="VARCHAR" javaType="String"/>
        <result column="createTime" property="createTime"/>
        <result column="deleteStatus" property="deleteStatus" jdbcType="INTEGER" javaType="int"/>
    </resultMap>

    <sql id="Base_Column_List">
        t1.id,t1.systemId,t1.cash,t1.title,t1.content,t1.note,t1.createTime,t1.deleteStatus
    </sql>

    <select id="getById" parameterType="long" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        from freeActivity t1 where t1.deleteStatus != 0 and t1.id=#{id}
    </select>

    <select id="getByMap" parameterType="Map" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        from freeActivity t1 where t1.deleteStatus != 0
        <if test="systemId!=null">
            and t1.systemId=#{systemId}
        </if>
        ORDER BY t1.id DESC
    </select>

    <insert id="insert" parameterType="com.tocheck.parent.core.entity.FreeActivity" useGeneratedKeys="true" keyProperty="id">
        insert into freeActivity(systemId,cash,title,content,note) values
        (#{systemId},#{cash},#{title},#{content},#{note})
    </insert>

    <update id="updateByMap" parameterType="Map">
        update freeActivity
        <set>
            <if test="systemId!=null">
                systemId=#{systemId},
            </if>
            <if test="title!=null">
                title=#{title},
            </if>
            <if test="content!=null">
                content=#{content},
            </if>
            <if test="note!=null">
                note=#{note},
            </if>
        </set>
        where id = #{id}
    </update>

    <update id="logicDelete" parameterType="Long">
        update freeActivity set deleteStatus = 0 where id=#{id}
    </update>

</mapper>