<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tocheck.parent.core.dao.IUserActivityDao">
    <resultMap id="BaseResultMap" type="com.tocheck.parent.core.vo.UserActivityVo">
        <id column="id" property="id" jdbcType="BIGINT" javaType="long"/>
        <result column="userId" property="userId" jdbcType="BIGINT" javaType="long"/>
        <result column="actId" property="actId" jdbcType="BIGINT" javaType="long"/>
        <result column="submitTime" property="submitTime"/>
        <result column="actResult" property="actResult" jdbcType="VARCHAR" javaType="String"/>
        <result column="status" property="status" jdbcType="INTEGER" javaType="int"/>
        <result column="approveTime" property="approveTime"/>
        <result column="deleteStatus" property="deleteStatus" jdbcType="INTEGER" javaType="int"/>
    </resultMap>

    <sql id="Base_Column_List">
        t1.id,t1.userId,t1.actId,t1.submitTime,t1.actResult,t1.status,t1.approveTime,t1.deleteStatus
    </sql>

    <select id="getById" parameterType="long" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        from userActivity t1 where t1.deleteStatus != 0 and t1.id=#{id}
    </select>

    <select id="selectByPrimaryKey" parameterType="long" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        from userActivity t1 where t1.actId=#{0} AND t1.userId = #{1}
    </select>

    <select id="getByMap" parameterType="Map" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>,t2.userName
        from userActivity t1 LEFT JOIN webUser t2 ON t1.userId = t2.id where t1.deleteStatus != 0
        <if test="userId!=null">
            and t1.userId=#{userId}
        </if>
        <if test="status!=null">
            and t1.status=#{status}
        </if>
        ORDER BY t1.id DESC
    </select>

    <insert id="insert" parameterType="com.tocheck.parent.core.entity.UserActivity" useGeneratedKeys="true" keyProperty="id">
        insert into userActivity(userId,actId,actResult,status) values
        (#{userId},#{actId},#{actResult},#{status})
    </insert>

    <update id="updateByMap" parameterType="Map">
        update userActivity
        <set>
            <if test="status!=null">
                status=#{status},
            </if>
            <if test="approveTime!=null">
                approveTime=#{approveTime},
            </if>
            <if test="actResult!=null">
                actResult=#{actResult},
            </if>
        </set>
        where id = #{id}
    </update>

    <update id="logicDelete" parameterType="Long">
        update userActivity set deleteStatus = 0 where id=#{id}
    </update>

</mapper>