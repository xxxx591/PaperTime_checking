package com.tocheck.parent.core.service.impl;

import com.tocheck.parent.core.dao.IToCheckThirdPartyOrderDao;
import com.tocheck.parent.core.entity.ToCheckTaoBaoOrder;
import com.tocheck.parent.core.entity.ToCheckThirdPartyOrder;
import com.tocheck.parent.core.service.ToCheckThirdPartyOrderService;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import java.util.HashMap;
import java.util.List;
import java.util.Map;

/**
 * @author pangliang
 * @create 2017-06-12 9:36
 **/
@Service
public class ToCheckThirdPartyOrderServiceImpl implements ToCheckThirdPartyOrderService {

    @Autowired
    private IToCheckThirdPartyOrderDao toCheckThirdPartyOrderDao;


    @Override
    public ToCheckThirdPartyOrder getByOrderNum(String orderNum) {
        Map<String,Object> param = new HashMap<>();
        param.put("orderNum",orderNum);
        List<ToCheckThirdPartyOrder> list = toCheckThirdPartyOrderDao.getByMap(param);
        if(!list.isEmpty()){
            return list.get(0);
        }
        return null;
    }

    @Override
    public void insert(ToCheckThirdPartyOrder order) {
        toCheckThirdPartyOrderDao.insert(order);
    }

    @Override
    public void updateByMap(Map<String, Object> map) {
        toCheckThirdPartyOrderDao.updateByMap(map);
    }
}
