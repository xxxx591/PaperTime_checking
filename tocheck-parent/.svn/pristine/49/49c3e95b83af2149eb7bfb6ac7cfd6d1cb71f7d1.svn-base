<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tocheck.parent.core.dao.IUserCouponDao">
    <resultMap id="BaseResultMap" type="com.tocheck.parent.core.entity.UserCoupon">
        <id column="id" property="id" jdbcType="BIGINT" javaType="long"/>
        <result column="userId" property="userId" jdbcType="BIGINT" javaType="long"/>
        <result column="actId" property="actId" jdbcType="BIGINT" javaType="long"/>
        <result column="title" property="title" jdbcType="VARCHAR" javaType="String"/>
        <result column="systemId" property="systemId" jdbcType="BIGINT" javaType="long"/>
        <result column="cash" property="cash" jdbcType="DECIMAL" javaType="java.math.BigDecimal"/>
        <result column="submitTime" property="submitTime"/>
        <result column="status" property="status" jdbcType="INTEGER" javaType="int"/>
        <result column="deleteStatus" property="deleteStatus" jdbcType="INTEGER" javaType="int"/>
    </resultMap>

    <sql id="Base_Column_List">
        t1.id,t1.userId,t1.actId,t1.title,t1.systemId,t1.cash,t1.submitTime,t1.status,t1.deleteStatus
    </sql>

    <select id="getById" parameterType="long" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        from userCoupon t1 where t1.deleteStatus != 0 and t1.id=#{id}
    </select>

    <select id="getByMap" parameterType="Map" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        from userCoupon t1 where t1.deleteStatus != 0
        <if test="userId!=null">
            and t1.userId=#{userId}
        </if>
        <if test="systemId!=null">
            and t1.systemId=#{systemId}
        </if>
        <if test="status!=null">
            and t1.status=#{status}
        </if>
        ORDER BY t1.id DESC
    </select>

    <insert id="insert" parameterType="com.tocheck.parent.core.entity.UserCoupon" useGeneratedKeys="true" keyProperty="id">
        insert into userCoupon(userId,actId,title,systemId,cash,status) values
        (#{userId},#{actId},#{title},#{systemId},#{cash},#{status})
    </insert>

    <update id="updateByMap" parameterType="Map">
        update userCoupon
        <set>
            <if test="status!=null">
                status=#{status},
            </if>
        </set>
        where id = #{id}
    </update>

    <update id="logicDelete" parameterType="Long">
        update userCoupon set deleteStatus = 0 where id=#{id}
    </update>

</mapper>