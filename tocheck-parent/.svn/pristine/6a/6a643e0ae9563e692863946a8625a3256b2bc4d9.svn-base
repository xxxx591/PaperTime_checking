package com.tocheck.parent.core.properties;

import org.springframework.beans.factory.annotation.Value;
import org.springframework.stereotype.Component;


@Component
public class PayProperties {

    /*####################支付宝#######################*/
    // 支付宝服务窗接口配置
    @Value("#{configProperties['alipay.service.window.gateway']}")
    public String aliPayServiceWindowGateway;
    @Value("#{configProperties['alipay.service.window.public.key']}")
    public String aliPayServiceWindowPublicKey;
    @Value("#{configProperties['alipay.service.window.private.key']}")
    public String aliPayServiceWindowPrivateKey;
    @Value("#{configProperties['alipay.service.window.sign.charset']}")
    public String aliPayServiceWindowSignCharset;
    @Value("#{configProperties['alipay.service.window.charset']}")
    public String aliPayServiceWindowCharset;
    @Value("#{configProperties['alipay.service.window.sign.type']}")
    public String aliPayServiceWindowSignType;
    @Value("#{configProperties['alipay.service.window.appid']}")
    public String aliPayServiceWindowAppid;
    @Value("#{configProperties['alipay.service.window.partner']}")
    public String alipayServiceWindowPartner;
    @Value("#{configProperties['alipay.service.window.grant.type']}")
    public String aliPayServiceWindowGrantType;
    @Value("#{configProperties['alipay.service.window.notifyUrl']}")
    public String alipayServiceWindowNotifyUrl;
    @Value("#{configProperties['alipay.qr.code.path']}")
    public String alipayQrCodePath;
    @Value("#{configProperties['alipay.qr.code.url']}")
    public String alipayQrCodeUrl;


    /*##################################微信支付###################################################*/
    //支付网关
    @Value("#{configProperties['wx_gateway']}")
    public String wxGateway;
    //微信公众号id
    @Value("#{configProperties['wx_app_id']}")
    public String wxAppId;
    //商户号
    @Value("#{configProperties['wx_mch_id']}")
    public String wxMchId;
    //apiKey
    @Value("#{configProperties['wx_api_key']}")
    public String wxApiKey;
    //设备id
    @Value("#{configProperties['wx_device_info']}")
    public String wxDeviceInfo;
    //货币类型
    @Value("#{configProperties['wx_fee_type']}")
    public String wxFeeType;
    //异步通知地址
    @Value("#{configProperties['wx_notify_url']}")
    public String wxNotifyUrl;
    //交易类型
    @Value("#{configProperties['wx_trade_type']}")
    public String wxTradeType;
    //商品id
    @Value("#{configProperties['wx_product_id']}")
    public String wxProductId;
    //指定支付方式
    @Value("#{configProperties['wx_limit_pay']}")
    public String wxLimitPay;
    //微信支付二维码生成目录
    @Value("#{configProperties['wx.pay.qr.code.path']}")
    public String wxQrCodePath;
    //微信支付二维码访问地址
    @Value("#{configProperties['wx.pay.qr.code.url']}")
    public String wxQrCodeUrl;
}