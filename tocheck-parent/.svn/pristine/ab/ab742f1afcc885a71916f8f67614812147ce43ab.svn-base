        <!--检测资讯-left-->
        <div class="news-left news-left-nr">
            <h3>${topic.title}</h3>
            <h4>
                <span>发布时间：<fmt:formatDate value="${topic.createTime}" pattern="yyyy-MM-dd HH:mm:ss"/></span>
                <span>作者：tocheck</span>
            </h4>
            <hr/>
            ${topic.content}
            <div class="nr-next">
                <c:if test="${empty prev}">
                    <a href="javascript:void(0);" class="nr-next-a">上一篇:没有上一篇了...</a>
                </c:if>
                <c:if test="${!empty prev}">
                    <a href="/newDetail/${prev.id}.html" class="nr-next-a">上一篇:${prev.title}</a>
                </c:if>

                <c:if test="${empty next}">
                    <a href="javascript:void(0);" class="nr-next-a">下一篇:没有下一篇了...</a>
                </c:if>
                <c:if test="${!empty next}">
                    <a href="/newDetail/${next.id}.html" class="nr-next-a">下一篇:${next.title}</a>
                </c:if>
            </div>

        </div>
