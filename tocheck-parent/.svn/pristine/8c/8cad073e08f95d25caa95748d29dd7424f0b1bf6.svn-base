<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<%@ taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt" %>
<%@ taglib prefix="fn" uri="http://java.sun.com/jsp/jstl/functions" %>
<!doctype html>
<html>
<head>
    <title>获取优惠券</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="${pageContext.request.contextPath}/resources/layui/css/layui.css">
    <link rel="stylesheet" href="${pageContext.request.contextPath}/resources/css/style.css">
</head>
<body>
<!----header----->
<div class="header-sub header-ckbg">
    <a class="logo-sub" href="/"><img src="/resources/images/logo.png" alt="" title=""></a>
    <div class="head-nav">
        <a href="${pageContext.request.contextPath}/submitTask/1.html" class="head-a ">提交论文</a>
        <a href="${pageContext.request.contextPath}/viewReport/index.html" class="head-a ">查看报告</a>
        <a href="${pageContext.request.contextPath}/coupon/get.html" class="head-a head-as">获取优惠券</a>
    </div>
</div>
<!--获取优惠券-个人信息-->
<div class="yhq-grxx">
    <div class="yhq-grxx-d">
        <div class="grxx-item">
            <div class="grxx-img">
                <img src="${pageContext.request.contextPath}/resources/images/tx.jpg" alt=""  title="">
            </div>
            <span>您好，${webUser.userName}</span>
        </div>
        <div class="grxx-item">
            <span>
                注册类型：
                 <c:if test="${webUser.loginType==1}">
                     QQ注册
                 </c:if>
                 <c:if test="${webUser.loginType==2}">
                     微信注册
                 </c:if>
            </span>
        </div>
        <div class="grxx-item">
            <span>注册时间：<fmt:formatDate value="${webUser.createTime}" pattern="yyyy-MM-dd"/></span>
        </div>
    </div>
</div>
<!-----主体内容----->
<div class="yhq-bd">
    <div class="yhq-nav">
        <a class="yhq-nav-a yhq-nav-as" href="${pageContext.request.contextPath}/coupon/get.html">获取优惠券</a>
        <a class="yhq-nav-a" href="${pageContext.request.contextPath}/coupon/my.html">我的优惠券</a>
    </div>
    <div class="yhq-nr">
        <ul class="yhq-nr-ul">
            <c:forEach items="${list}" var="r" varStatus="s">
                <li>
                    <a class="yhq-d yhq-d${s.index+1}"  href="javascript:showActivityDetail(${r.id});">
                        <strong>${r.title}</strong>
                        <p>¥ <em>${r.cash}</em>元</p>
                        <span>免费领取<i></i></span>
                    </a>
                </li>
            </c:forEach>
            <c:if test="${fn:length(list) lt 9}">
                <c:forEach begin="${fn:length(list) + 1}" end="9" step="1" varStatus="s">
                    <li>
                        <a class="yhq-d yhq-d${s.index}" href="javascript:;">
                            <div class="yhq-add"></div>
                        </a>
                    </li>
                </c:forEach>
            </c:if>
        </ul>
    </div>
</div>
<!-----footer---->
<script src="${pageContext.request.contextPath}/resources/js/jquery.min.js"></script>
<script src="${pageContext.request.contextPath}/resources/layui/lay/dest/layui.all.js"></script>
<script src="${pageContext.request.contextPath}/resources/js/common.js"></script>
<script src="${pageContext.request.contextPath}/resources/js/coupon.js"></script>
<jsp:include page="../submitTask/footer.jsp"/>
</body>
</html>
