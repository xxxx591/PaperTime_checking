<?xml version="1.0" encoding="UTF-8"?>
<sitemesh>
    <mime-type>text/html</mime-type>
    <mime-type>application/vnd.wap.xhtml+xml</mime-type>
    <mime-type>application/xhtml+xml</mime-type>

    <!-- 指明满足“/*”的页面，将被“/WEB-INF/views/decorators/decorator.html”所装饰 -->
    <mapping path="/agent/*.html" decorator="/WEB-INF/pages/agent/sitemesh/decorator.jsp" />

    <mapping path="/admin/*.html" decorator="/WEB-INF/pages/admin/sitemesh/decorator.jsp" />

    <!-- 指明满足“/exclude.jsp*”的页面，将被排除，不被装饰 -->
    <mapping path="/exclude.jsp*" exclue="true" />
</sitemesh>